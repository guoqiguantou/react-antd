.loginwarp {
  width: 100%;
  height: 100%;
  background: linear-gradient(-90deg, #4da2ff, #2972e1 66.7%);
  background-size: cover;
  background-position: 50%;
  position: relative;
  overflow: hidden;
}
.loginwarp .warpbg {
  position: absolute;
  width: 100%;
  height: 100%;
  bottom: 0;
  left: 35%;
  background: #fff;
  -webkit-transform: rotate(-70deg);
  transform: rotate(-70deg);
  -webkit-transform-origin: center;
  transform-origin: center;
}
.loginwarp .warpcon {
  width: 100%;
  height: 100%;
  background-image: url('../../asset/images/login-bg.jpg');
  background-repeat: no-repeat;
  background-size: 100%;
  background-position: center;
  position: relative;
}
.loginwarp .loginforms {
  padding: 0 25px;
  box-sizing: border-box;
}
.loginwarp .loginforms h3 {
  font-size: 24px;
  text-align: center;
  line-height: 100px;
}
.loginwarp .loginforms .loginformforgot {
  float: right;
}
.loginwarp .loginforms .loginformbutton {
  width: 100%;
}
